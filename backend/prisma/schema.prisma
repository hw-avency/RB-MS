generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  displayName  String
  passwordHash String
  role         String   @default("user")
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  sessions     Session[]
  bookingsCreated Booking[] @relation("BookingCreatedBy")
}

model Session {
  id                 String   @id
  userId             String?
  employeeId         String?
  expiresAt          DateTime
  graphAccessToken   String?
  graphTokenExpiresAt DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
  employee Employee? @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([employeeId])
  @@index([expiresAt])
}

model OidcState {
  state     String   @id
  nonce     String
  createdAt DateTime @default(now())

  @@index([createdAt])
}

model Employee {
  id          String    @id @default(cuid())
  email       String    @unique
  displayName String
  role        String    @default("user")
  isActive    Boolean   @default(true)
  entraOid    String?   @unique
  tenantId    String?
  photoUrl    String?
  photoEtag   String?
  photoData   Bytes?
  photoType   String?
  photoUpdatedAt DateTime?
  lastLoginAt DateTime?
  createdAt   DateTime  @default(now())
  sessions    Session[]
}

model Floorplan {
  id                  String       @id @default(cuid())
  name                String
  imageUrl            String
  isDefault           Boolean      @default(false)
  defaultResourceKind ResourceKind @default(TISCH)
  defaultAllowSeries  Boolean      @default(true)
  createdAt           DateTime     @default(now())
  desks               Desk[]
}

model Desk {
  id                String             @id @default(cuid())
  floorplanId       String
  name              String
  kind              ResourceKind       @default(TISCH)
  allowSeriesOverride Boolean?
  x                 Float?
  y                 Float?
  createdAt         DateTime           @default(now())
  floorplan         Floorplan          @relation(fields: [floorplanId], references: [id], onDelete: Cascade)
  bookings          Booking[]
  recurringBookings RecurringBooking[]

  @@index([floorplanId])
}

enum ResourceKind {
  TISCH
  PARKPLATZ
  RAUM
  SONSTIGES
}

model Booking {
  id        String   @id @default(cuid())
  deskId    String
  userEmail String?
  bookedFor BookedFor @default(SELF)
  guestName String?
  createdByUserId String?
  createdByEmail String?
  date      DateTime @db.Date
  daySlot   DaySlot?
  startTime DateTime?
  endTime   DateTime?
  slot      BookingSlot @default(FULL_DAY)
  startMinute Int?
  endMinute Int?
  createdAt DateTime @default(now())
  desk      Desk     @relation(fields: [deskId], references: [id], onDelete: Cascade)
  createdBy User? @relation("BookingCreatedBy", fields: [createdByUserId], references: [id], onDelete: SetNull)

  @@index([userEmail, date])
  @@index([date])
  @@index([deskId])
  @@index([createdByUserId])
  @@index([createdByEmail])
}

enum BookedFor {
  SELF
  GUEST
}

enum DaySlot {
  AM
  PM
  FULL
}

enum BookingSlot {
  FULL_DAY
  MORNING
  AFTERNOON
  CUSTOM
}

model RecurringBooking {
  id        String    @id @default(cuid())
  deskId    String
  userEmail String
  weekday   Int
  validFrom DateTime  @db.Date
  validTo   DateTime? @db.Date
  createdAt DateTime  @default(now())
  desk      Desk      @relation(fields: [deskId], references: [id], onDelete: Cascade)

  @@index([deskId])
}
