generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  displayName  String
  passwordHash String
  role         String   @default("user")
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  sessions     Session[]
  bookingsCreated Booking[] @relation("BookingCreatedBy")
}

model Session {
  id                 String   @id
  userId             String?
  employeeId         String?
  expiresAt          DateTime
  graphAccessToken   String?
  graphTokenExpiresAt DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
  employee Employee? @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([employeeId])
  @@index([expiresAt])
}

model OidcState {
  state         String   @id
  nonce         String
  tenantContext String?
  createdAt     DateTime @default(now())

  @@index([createdAt])
}

model Employee {
  id          String    @id @default(cuid())
  email       String    @unique
  displayName String
  role        String    @default("user")
  isActive    Boolean   @default(true)
  entraOid    String?   @unique
  entraTenantId String?
  tenantDomainId String?
  photoUrl    String?
  photoEtag   String?
  photoData   Bytes?
  photoType   String?
  photoUpdatedAt DateTime?
  lastLoginAt DateTime?
  createdAt   DateTime  @default(now())
  sessions    Session[]
  bookingsCreated Booking[] @relation("BookingCreatedByEmployee")
  bookingsForSelf Booking[] @relation("BookingEmployee")
  recurringBookingsCreated RecurringBooking[] @relation("RecurringBookingCreatedByEmployee")
  tenant      Tenant?   @relation(fields: [tenantDomainId], references: [id], onDelete: SetNull)

  @@index([tenantDomainId])
}

model Tenant {
  id          String      @id @default(cuid())
  domain      String      @unique
  name        String?
  entraId     String?     @unique
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  employees   Employee[]
  deskTenants DeskTenant[]
  floorplanTenants FloorplanTenant[]
}

model Floorplan {
  id                  String       @id @default(cuid())
  name                String
  imageUrl            String
  isDefault           Boolean      @default(false)
  sortOrder           Int          @default(0)
  tenantScope         FloorplanTenantScope @default(ALL)
  defaultResourceKind ResourceKind @default(TISCH)
  defaultAllowSeries  Boolean      @default(true)
  createdAt           DateTime     @default(now())
  desks               Desk[]
  floorplanTenants    FloorplanTenant[]
}

model FloorplanTenant {
  floorplanId String
  tenantId    String
  createdAt   DateTime @default(now())
  floorplan   Floorplan @relation(fields: [floorplanId], references: [id], onDelete: Cascade)
  tenant      Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@id([floorplanId, tenantId])
  @@index([tenantId])
}

enum FloorplanTenantScope {
  ALL
  SELECTED
}

model Desk {
  id                String             @id @default(cuid())
  floorplanId       String
  name              String
  kind              ResourceKind       @default(TISCH)
  allowSeriesOverride Boolean?
  tenantScope       DeskTenantScope    @default(ALL)
  x                 Float?
  y                 Float?
  createdAt         DateTime           @default(now())
  floorplan         Floorplan          @relation(fields: [floorplanId], references: [id], onDelete: Cascade)
  bookings          Booking[]
  recurringBookings RecurringBooking[] @relation("RecurringBookingResource")
  deskTenants       DeskTenant[]

  @@index([floorplanId])
}

model DeskTenant {
  deskId     String
  tenantId   String
  createdAt  DateTime @default(now())
  desk       Desk     @relation(fields: [deskId], references: [id], onDelete: Cascade)
  tenant     Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@id([deskId, tenantId])
  @@index([tenantId])
}

enum DeskTenantScope {
  ALL
  SELECTED
}

enum ResourceKind {
  TISCH
  PARKPLATZ
  RAUM
  SONSTIGES
}

model Booking {
  id        String   @id @default(cuid())
  deskId    String
  userEmail String?
  bookedFor BookedFor @default(SELF)
  guestName String?
  employeeId String?
  creatorUnknown Boolean @default(false)
  createdByEmployeeId String
  createdByEmployee Employee @relation("BookingCreatedByEmployee", fields: [createdByEmployeeId], references: [id], onDelete: Restrict)
  createdByUserId String?
  createdByEmail String?
  recurringBookingId String?
  recurringGroupId String?
  date      DateTime @db.Date
  daySlot   DaySlot?
  startTime DateTime?
  endTime   DateTime?
  slot      BookingSlot @default(FULL_DAY)
  startMinute Int?
  endMinute Int?
  createdAt DateTime @default(now())
  desk      Desk     @relation(fields: [deskId], references: [id], onDelete: Cascade)
  createdBy User? @relation("BookingCreatedBy", fields: [createdByUserId], references: [id], onDelete: SetNull)
  employee Employee? @relation("BookingEmployee", fields: [employeeId], references: [id], onDelete: SetNull)
  recurringBooking RecurringBooking? @relation(fields: [recurringBookingId], references: [id], onDelete: SetNull)

  @@index([userEmail, date])
  @@index([employeeId, date])
  @@index([date])
  @@index([deskId])
  @@index([createdByUserId])
  @@index([createdByEmail])
  @@index([createdByEmployeeId])
  @@index([recurringBookingId])
  @@index([recurringGroupId])
}

enum BookedFor {
  SELF
  GUEST
}

enum DaySlot {
  AM
  PM
  FULL
}

enum BookingSlot {
  FULL_DAY
  MORNING
  AFTERNOON
  CUSTOM
}

enum RecurrencePatternType {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

model RecurringBooking {
  id                  String    @id @default(cuid())
  groupId             String    @default(uuid())
  resourceId          String
  createdByEmployeeId String
  startDate           DateTime  @db.Date
  endDate             DateTime  @db.Date
  patternType         RecurrencePatternType
  interval            Int       @default(1)
  byWeekday           Int[]
  byMonthday          Int?
  bySetPos            Int?
  byMonth             Int?
  bookedFor           BookedFor @default(SELF)
  guestName           String?
  period              DaySlot?
  startTime           String?
  endTime             String?
  createdAt           DateTime  @default(now())
  resource            Desk      @relation("RecurringBookingResource", fields: [resourceId], references: [id], onDelete: Cascade)
  createdByEmployee   Employee  @relation("RecurringBookingCreatedByEmployee", fields: [createdByEmployeeId], references: [id], onDelete: Restrict)
  bookings            Booking[]

  @@index([resourceId, startDate, endDate])
  @@index([createdByEmployeeId])
  @@index([groupId])
}
